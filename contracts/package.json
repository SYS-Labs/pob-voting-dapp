{
  "name": "example-contracts-app",
  "version": "1.0.0",
  "description": "A generic example of a contract-based application.",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=22.0.0"
  },
  "scripts": {
    "clean": "rimraf cache artifacts",
    "compile": "hardhat compile",
    "deploy:testnet": "hardhat run scripts/deploy.js --network testnet",
    "deploy:mainnet": "hardhat run scripts/deploy.js --network mainnet",
    "deploy:hardhat": "hardhat run scripts/deploy.js --network hardhat",
    "deploy:localhost": "hardhat run scripts/deploy.js --network localhost",
    "accounts": "hardhat accounts",
    "node": "hardhat node",
    "hardhat": "bash ./start-hardhat.sh",
    "test": "hardhat test"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^5.4.0",
    "@openzeppelin/contracts-upgradeable": "^5.4.0",
    "@openzeppelin/hardhat-upgrades": "^3.9.1",
    "dotenv": "^16.4.5",
    "ethers": "^6.13.2"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^5.0.0",
    "hardhat": "^2.22.6",
    "rimraf": "^5.0.5"
  }
}
