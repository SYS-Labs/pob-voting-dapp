# X (Twitter) API Credentials
X_USERNAME=your_x_username

# X Authentication Methods - Separate for Read and Write
# RECOMMENDED SETUP:
#   X_READ_AUTH_METHOD=cookies (most reliable for reading)
#   X_WRITE_AUTH_METHOD=oauth1  (reliable for posting, tokens never expire)
#
# Available methods:
#   oauth1: OAuth 1.0a (tokens never expire)
#   oauth2: OAuth 2.0 (tokens expire frequently, not recommended)
#   cookies: Browser cookies (most reliable for reading, breaks for writing)

X_READ_AUTH_METHOD=cookies
X_WRITE_AUTH_METHOD=oauth1

# X OAuth 1.0a Credentials (RECOMMENDED - tokens never expire, supports read/write)
# Get from https://developer.twitter.com/en/portal/projects-and-apps
X_API_KEY=your_api_key_here
X_API_SECRET=your_api_secret_here
X_ACCESS_TOKEN=your_access_token_here
X_ACCESS_TOKEN_SECRET=your_access_token_secret_here

# Cookie-based Authentication (legacy, only needed if X_AUTH_METHOD=cookies)
# Get these from your browser's developer tools when logged into x.com
X_AUTH_TOKEN=your_auth_token_cookie
X_CT0=your_ct0_csrf_token_cookie
# Bearer token from X web app - get from browser network tab
X_BEARER_TOKEN=AAAAAAAA...bearer_token
# GraphQL TweetDetail query ID - changes when X updates their API
X_GRAPHQL_TWEET_DETAIL_ID=6QzqakNMdh_YzBAR9SYPkQ

# X OAuth 2.0 Credentials (NOT RECOMMENDED - tokens expire frequently)
# 1. Get Client ID and Secret from https://developer.twitter.com/en/portal/projects-and-apps
# 2. Add them below
# 3. Set callback URL (must match what's in Twitter Developer Portal)
# 4. Run: npm run get-oauth2-tokens to get access and refresh tokens
#    IMPORTANT: When running the OAuth script, open the URL in a browser where you are NOT logged into X
#               (use incognito mode, logout first, or use a different browser profile)
X_CLIENT_ID=your_client_id_here
X_CLIENT_SECRET=your_client_secret_here
X_OAUTH_CALLBACK_URL=http://localhost:3000/callback
X_OAUTH2_ACCESS_TOKEN=YOUR_ACCESS_TOKEN_HERE
X_OAUTH2_REFRESH_TOKEN=YOUR_REFRESH_TOKEN_HERE

# Main X Publications to Index (comma-separated post IDs)
# You can index multiple threads by providing multiple post IDs
# Example: X_MAIN_POST_IDS=1234567890123456789,9876543210987654321,1111222233334444555
X_MAIN_POST_IDS=1234567890123456789

# Trusted X Usernames (comma-separated, no @ symbol)
X_TRUSTED_USERS=alice,bob,charlie

# AI API Configuration
AI_API_PROVIDER=openai
AI_API_ENDPOINT=https://api.openai.com/v1
AI_API_KEY=your_openai_api_key
AI_MODEL=gpt-4-turbo

# Blockchain Configuration
PRIVATE_KEY=0x...your_private_key_here

# Network Options:
# Tanenbaum Testnet: RPC_URL=https://rpc.tanenbaum.io, CHAIN_ID=5700
# Syscoin Mainnet:   RPC_URL=https://rpc.syscoin.org, CHAIN_ID=57
# Rollux L2:         RPC_URL=https://rpc.rollux.com, CHAIN_ID=570

RPC_URL=https://rpc.tanenbaum.io
CHAIN_ID=5700
CONTRACT_ADDRESS=0x...deployed_contract_address
ADMIN_ADDRESS=0x...your_admin_wallet_address
EXPLORER_URL=https://explorer.tanenbaum.io

# Database
DB_PATH=./data/index.db

# IPFS Configuration
IPFS_API_URL=http://localhost:5001
IPFS_FALLBACK_API_URL=http://backup-ipfs-host:5001
IPFS_USE_DAG=true

# Indexer Settings
POLL_INTERVAL=300000  # 5 minutes in milliseconds
MAX_REPLY_DEPTH=3

# Worker Settings
WORKER_INTERVAL=60000  # 1 minute in milliseconds
BATCH_SIZE=10          # Process N items per batch

# Logging
LOG_LEVEL=info  # debug|info|warn|error
